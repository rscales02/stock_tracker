<SearchBar>
    size_hint: 1, 0.1
    pos_hint: {'bottom': 1}

    TextInput:
        id: symbol
        multiline: False
        text: 'Enter ticker symbol'
        size_hint: 3, 1
        on_text_validate: root.on_press()
        on_focus: root.clear_text()
    Button:
        text: 'Search'
        on_press: root.on_press()

<StockList>
    size_hint: 0.25, 0.9
    pos_hint: {'right': 1, 'top': 1}
    orientation: 'vertical'


<StockGraph>
    size_hint: 0.75, 0.9
    pos_hint: {'top': 1, 'left': 1}
    orientation: 'vertical'

<root>:
    SearchBar:
    StockList:
    StockGraph: